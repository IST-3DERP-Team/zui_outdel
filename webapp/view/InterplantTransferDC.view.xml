                                            editable="{ui>/editModeHeader2}"
                                            valueHelpRequest="handleFormValueHelp"
                                            suggestionItems="{path: 'rcvSloc>/results', length: 10000, templateShareable: false}"
                                            change="onFormValueHelpInputChange"
