                                        <Button id="btnTabLayoutDlvDtlHU"
                                            icon="sap-icon://grid" 
                                            press="onSaveTableLayout"
                                            tooltip="{ddtext>/SAVELAYOUT}" 
                                            visible="true" />
                                    </Toolbar>
                                </uiT:extension>
                                <uiT:layoutData>
                                    <FlexItemData growFactor="1" baseSize="0%"/>
                                </uiT:layoutData>
                            </uiT:Table>
