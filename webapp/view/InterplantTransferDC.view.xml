                                <f:FormElement label="{ddtext>/DELETED}">  
                                    <f:fields>
                                        <CheckBox 
                                            id="chkDeleted"
                                            editable="false"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{ddtext>/UPDATEDBY}">  
